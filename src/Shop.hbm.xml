<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.mugspot.Shop" table="Shop">
		<id name="id" column="id" type="int">
			<generator class="increment"></generator>
		</id>
		<property name=">placeID" column="placeID" type="string"></property>
		<property name="shop_name" column="shop_name" type="string"></property>
		<property name="description" column="description" type="string"></property>
		<property name="outlets" column="oulets" type="int"></property>
		<property name="capacity" column="capacity" type="int"></property>
		<property name="tables" column="tables" type="int"></property>
	</class>
</hibernate-mapping> 






CREATE TABLE ShopInfoshopinfo(
  `ID` int(11) NOT NULL AUTO_INCREMENT,
  `Shop_Name` varchar(45) NOT NULL,
  `Description` varchar(255) NOT NULL,
  `Menu` varchar(255) DEFAULT NULL,
  `Outlets` int(11) DEFAULT NULL,
  `Capacity` int(11) DEFAULT NULL,
  `Place_ID` varchar(45) NOT NULL,
  `Budget` int(11) DEFAULT NULL,
  PRIMARY KEY (`ID`)
) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=utf8;
 